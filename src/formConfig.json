{
    "fields": [
      {
        "label": "Full Name",
        "type": "text",
        "name": "fullName",
        "placeholder": "Enter your full name",
        "helperText": "Enter your full legal name.",
        "required": true,
        "validation": {
          "minLength": 3,
          "message": "Full name must be at least 3 characters."
        }
      },
      {
        "label": "Email Address",
        "type": "email",
        "name": "email",
        "placeholder": "Enter your email",
        "helperText": "Provide a valid email address containing @ and a domain.",
        "required": true,
        "validation": {
          "regex": "^[^\\s@]+@[^\\s@]+\\.[^\\s@]+$",
          "message": "Invalid email format."
        }
      },
      {
        "label": "Password",
        "type": "password",
        "name": "password",
        "placeholder": "Enter a strong password",
        "helperText": "Password should be at least 8 characters long and include a number and special character.",
        "required": true,
        "validation": {
          "regex": "^(?=.*[0-9])(?=.*[!@#$%^&*])[a-zA-Z0-9!@#$%^&*]{8,}$",
          "minLength": 8,
          "message": "Password must include a number and a special character."
        }
      },
      {
        "label": "Phone Number",
        "type": "text",
        "name": "phone",
        "placeholder": "Enter your phone number",
        "helperText": "Include your country code (e.g., +1, +96).",
        "required": true,
        "validation": {
          "regex": "^\\d{10}$",
          "message": "Phone number must be 10 digits."
        }
      },
      {
        "label": "Age",
        "type": "number",
        "name": "age",
        "placeholder": "Enter your age",
        "helperText": "Provide your age.",
        "required": true,
        "validation": {
          "min": 18,
          "max": 65,
          "message": "Age must be between 18 and 65."
        }
      },
      {
        "label": "Country",
        "type": "select",
        "name": "country",
        "options": ["Jordan", "Egypt", "Syria", "Palestine", "Qatar", "Yemen"],
        "placeholder": "Select a country",
        "helperText": "Choose your country from the list.",
        "required": true
      },
      {
        "label": "Agree to Terms",
        "type": "checkbox",
        "name": "terms",
        "helperText": "You must agree to the terms.",
        "required": true
      }
    ]
  }
  